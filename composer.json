{
    "name": "bonfim/activerecord",
    "type": "library",
    "description": "Implementação do padrão de projeto active record em PHP",
    "keywords": [
        "Bonfim",
        "ActiveRecord"
    ],
    "homepage": "https://github.com/EdsonOnildoJR/activerecord.php",
    "license": "MIT",
    "authors": [
        {
            "name": "Edson Onildo",
            "email": "inbox.edsononildo@gmail.com",
            "homepage": "https://github.com/EdsonOnildoJR",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.1",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Bonfim\\ActiveRecord\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bonfim\\ActiveRecord\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
