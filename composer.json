{
    "name": "edsononildo/orm",
    "type": "library",
    "description": "Do a lot with very little, an elegant ORM for PHP.",
    "homepage": "https://github.com/EdsonOnildoJR/Keep-ORM",
    "license": "MIT",
    "authors": [
        {
            "name": "Edson Onildo",
            "email": "inbox.edsononildo@gmail.com",
            "homepage": "https://github.com/EdsonOnildoJR",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=7.1.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Keep\\": "src/Keep/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/Keep/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "example": "php -S localhost:3000 -t examples",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "config": {
        "sort-packages": true
    }
}
